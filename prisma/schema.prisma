// prisma/schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // proxy at runtime
  directUrl = env("DIRECT_URL")    // direct for migrate/pull
}



generator client {
  provider = "prisma-client-js"
  
}



enum ReviewStatus {
  PENDING
  APPROVED
}

model Testimon {
  id        Int          @id @default(autoincrement())
  name      String
  rating    Int
  message   String
  photoUrl  String?
  status    ReviewStatus @default(PENDING)
  createdAt DateTime     @default(now())

  @@map("TESTIMON") // underlying SQL table name (uppercase)
}
