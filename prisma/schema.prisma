generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Testimon {
  id        Int          @id @default(autoincrement())
  name      String
  rating    Int
  message   String
  photoUrl  String?
  status    ReviewStatus @default(PENDING)
  createdAt DateTime     @default(now())

  @@map("TESTIMON")
}

enum ReviewStatus {
  PENDING
  APPROVED
}
