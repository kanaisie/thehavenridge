generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




enum TestimonStatus {
  PENDING
  APPROVED
  REJECTED
}

model Testimon {
  id        Int            @id @default(autoincrement())
  name      String
  message   String
  photoUrl  String?
  rating    Int
  created_at DateTime @default(now()) @db.Timestamptz(6)
  createdAt  DateTime @default(now()) @db.Timestamptz(6) 
  status    TestimonStatus @default(PENDING) // <-- add this
  @@map("testimon")
}
